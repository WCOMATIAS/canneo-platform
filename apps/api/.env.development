# ============================================================================
# CANNEO API - Environment Variables (DESENVOLVIMENTO LOCAL)
# ============================================================================
# Este arquivo contém valores para desenvolvimento local com Docker
# NÃO use em produção!
# ============================================================================

# Database (PostgreSQL via Docker)
DATABASE_URL="postgresql://canneo_user:canneo_dev_password@localhost:5432/canneo"

# JWT Authentication (valores de desenvolvimento - NÃO usar em produção)
JWT_SECRET="dev-jwt-secret-canneo-2026-change-in-production"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_SECRET="dev-refresh-secret-canneo-2026-change-in-production"
REFRESH_TOKEN_EXPIRES_IN="7d"

# MFA
MFA_ISSUER="CANNEO-DEV"
OTP_EXPIRES_IN="5m"

# Email (usar Mailhog local ou Resend para testes)
EMAIL_FROM="CANNEO <noreply@canneo.local>"
# Para Mailhog: deixar vazio ou usar smtp://localhost:1025
# Para Resend: RESEND_API_KEY="re_xxxxxxxxxxxx"
RESEND_API_KEY=""

# Video (Daily.co - usar sua conta de teste)
DAILY_API_KEY=""
DAILY_DOMAIN="canneo.daily.co"

# Storage (Local para desenvolvimento)
STORAGE_TYPE="local"
STORAGE_LOCAL_PATH="./uploads"
STORAGE_BASE_URL="http://localhost:3000"

# Crypto (valores de desenvolvimento - NÃO usar em produção)
CPF_ENCRYPTION_KEY="dev-cpf-key-32-bytes-canneo-2026"
SIGNATURE_PEPPER="dev-signature-pepper-canneo-2026"

# Stripe (usar modo teste)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# App
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3001"

# Logs
LOG_LEVEL="debug"
