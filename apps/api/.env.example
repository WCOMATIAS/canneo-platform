# ============================================================================
# CANNEO API - Environment Variables
# ============================================================================
# Copie este arquivo para .env e preencha os valores
# NUNCA commite o arquivo .env no Git!
# ============================================================================

# Database (Neon.tech)
DATABASE_URL="postgresql://USER:PASSWORD@HOST/canneo?sslmode=require"

# JWT Authentication
JWT_SECRET="gerar-com-openssl-rand-base64-32"
JWT_EXPIRES_IN="15m"
REFRESH_TOKEN_SECRET="gerar-outra-chave-diferente"
REFRESH_TOKEN_EXPIRES_IN="7d"

# MFA
MFA_ISSUER="CANNEO"
OTP_EXPIRES_IN="5m"

# Email (Resend)
EMAIL_FROM="CANNEO <noreply@canneo.com.br>"
RESEND_API_KEY="re_xxxxxxxxxxxx"

# Video (Daily.co)
DAILY_API_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
DAILY_DOMAIN="canneo.daily.co"

# Storage (Supabase)
SUPABASE_URL="https://xxxxxxxxxxxx.supabase.co"
SUPABASE_SERVICE_KEY="eyJxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
STORAGE_BUCKET="canneo-files"

# Crypto (para CPF e assinaturas)
# Gerar com: openssl rand -base64 32
CPF_ENCRYPTION_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
SIGNATURE_PEPPER="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Stripe (Billing)
STRIPE_SECRET_KEY="sk_test_sua_chave_aqui"
STRIPE_WEBHOOK_SECRET="whsec_sua_chave_aqui"

# App
PORT=3000
NODE_ENV="development"
FRONTEND_URL="http://localhost:3001"

# Logs
LOG_LEVEL="debug"
